<?xml version="1.0" encoding="UTF-8"?>
<project name="qanda_final_project" default="all">
  
  
  <property file="qanda_final_project.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.commons-codec-1.10.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/commons-codec-1.10.jar"/>
  </path>
  
  <path id="library.commons-fileupload-1.3.2.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/commons-fileupload-1.3.2.jar"/>
  </path>
  
  <path id="library.commons-io-2.5.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/commons-io-2.5.jar"/>
  </path>
  
  <path id="library.jstl-1.2.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/jstl-1.2.jar"/>
  </path>
  
  <path id="library.log4j-api-2.5.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/log4j-api-2.5.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/log4j-core-2.5.jar"/>
  </path>
  
  <path id="library.mysql-connector-java-5.1.39-bin.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/mysql-connector-java-5.1.39-bin.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  
  <path id="library.tomcat_7.0.69.classpath">
    <pathelement location="C:/Program Files/Apache Software Foundation/Tomcat 7.0/lib/jsp-api.jar"/>
    <pathelement location="C:/Program Files/Apache Software Foundation/Tomcat 7.0/lib/servlet-api.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module QandA_Final_Project -->
  
  <dirname property="module.qanda_final_project.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.qanda_final_project" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.qanda_final_project" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.qanda_final_project" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.qanda_final_project" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="qanda_final_project.output.dir" value="${module.qanda_final_project.basedir}/out/production/QandA_Final_Project"/>
  <property name="qanda_final_project.testoutput.dir" value="${module.qanda_final_project.basedir}/out/test/QandA_Final_Project"/>
  
  <path id="qanda_final_project.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="qanda_final_project.module.production.classpath">
    <path refid="${module.jdk.classpath.qanda_final_project}"/>
    <path refid="library.tomcat_7.0.69.classpath"/>
    <path refid="library.log4j-api-2.5.classpath"/>
    <path refid="library.jstl-1.2.classpath"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <path refid="library.commons-fileupload-1.3.2.classpath"/>
    <path refid="library.commons-io-2.5.classpath"/>
  </path>
  
  <path id="qanda_final_project.runtime.production.module.classpath">
    <pathelement location="${qanda_final_project.output.dir}"/>
    <path refid="library.log4j-api-2.5.classpath"/>
    <path refid="library.jstl-1.2.classpath"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <path refid="library.commons-fileupload-1.3.2.classpath"/>
    <path refid="library.commons-io-2.5.classpath"/>
  </path>
  
  <path id="qanda_final_project.module.classpath">
    <path refid="${module.jdk.classpath.qanda_final_project}"/>
    <pathelement location="${qanda_final_project.output.dir}"/>
    <path refid="library.tomcat_7.0.69.classpath"/>
    <path refid="library.log4j-api-2.5.classpath"/>
    <path refid="library.jstl-1.2.classpath"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <path refid="library.commons-fileupload-1.3.2.classpath"/>
    <path refid="library.commons-io-2.5.classpath"/>
  </path>
  
  <path id="qanda_final_project.runtime.module.classpath">
    <pathelement location="${qanda_final_project.testoutput.dir}"/>
    <pathelement location="${qanda_final_project.output.dir}"/>
    <path refid="library.tomcat_7.0.69.classpath"/>
    <path refid="library.log4j-api-2.5.classpath"/>
    <path refid="library.jstl-1.2.classpath"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <path refid="library.commons-fileupload-1.3.2.classpath"/>
    <path refid="library.commons-io-2.5.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.qanda_final_project">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.qanda_final_project">
    <patternset refid="excluded.from.module.qanda_final_project"/>
  </patternset>
  
  <path id="qanda_final_project.module.sourcepath">
    <dirset dir="${module.qanda_final_project.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.qanda_final_project" depends="compile.module.qanda_final_project.production,compile.module.qanda_final_project.tests" description="Compile module QandA_Final_Project"/>
  
  <target name="compile.module.qanda_final_project.production" depends="register.custom.compilers" description="Compile module QandA_Final_Project; production classes">
    <mkdir dir="${qanda_final_project.output.dir}"/>
    <javac2 destdir="${qanda_final_project.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.qanda_final_project}/javac">
      <compilerarg line="${compiler.args.qanda_final_project}"/>
      <bootclasspath refid="qanda_final_project.module.bootclasspath"/>
      <classpath refid="qanda_final_project.module.production.classpath"/>
      <src refid="qanda_final_project.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.qanda_final_project"/>
    </javac2>
    
    <copy todir="${qanda_final_project.output.dir}">
      <fileset dir="${module.qanda_final_project.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.qanda_final_project.tests" depends="register.custom.compilers,compile.module.qanda_final_project.production" description="compile module QandA_Final_Project; test classes" unless="skip.tests"/>
  
  <target name="clean.module.qanda_final_project" description="cleanup module">
    <delete dir="${qanda_final_project.output.dir}"/>
    <delete dir="${qanda_final_project.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.qanda_final_project, clean.artifact.qanda_final_project:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.qanda_final_project" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.qanda_final_project:war_exploded" value="${basedir}/out/artifacts/QandA_Final_Project_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="clean.artifact.qanda_final_project:war_exploded" description="clean QandA_Final_Project:war exploded artifact output">
    <delete dir="${artifact.output.qanda_final_project:war_exploded}"/>
  </target>
  
  <target name="artifact.qanda_final_project:war_exploded" depends="init.artifacts, compile.module.qanda_final_project" description="Build &#39;QandA_Final_Project:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.qanda_final_project:war_exploded}"/>
    <copy todir="${artifact.output.qanda_final_project:war_exploded}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.qanda_final_project:war_exploded}/WEB-INF"/>
    <copy file="/web.xml" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/web.xml"/>
    <mkdir dir="${artifact.output.qanda_final_project:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/classes">
      <fileset dir="${qanda_final_project.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib"/>
    <copy file="${basedir}/web/WEB-INF/lib/log4j-api-2.5.jar" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib/log4j-api-2.5.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/log4j-core-2.5.jar" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib/log4j-core-2.5.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/jstl-1.2.jar" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib/jstl-1.2.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/mysql-connector-java-5.1.39-bin.jar" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib/mysql-connector-java-5.1.39-bin.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/commons-codec-1.10.jar" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib/commons-codec-1.10.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/commons-io-2.5.jar" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib/commons-io-2.5.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/commons-fileupload-1.3.2.jar" tofile="${artifact.output.qanda_final_project:war_exploded}/WEB-INF/lib/commons-fileupload-1.3.2.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.qanda_final_project:war_exploded" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>